<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cafeinatopia | Login</title>
    <link rel="stylesheet" href="/css/styles.css">
 <script src="https://kit.fontawesome.com/c65f2f1cc8.js" crossorigin="anonymous"></script>
</head>
<body>
    <main class="main_login">

        <%- include('../partials/header-admin') %>

        <section class="row">
            <div class="col-12 col-md-10 col-lg-6 mx-auto my-5">
                <div class="card shadow">
                    <div class="card-header">
                        <h4 class="card-title">Login de usuario</h4>
                    </div>
                    <div class="card-body">
                        <form action="" class="row" method="POST">
                            <div class="col-12 mb-3">
                                <label for="email" class="form-label">Correo electrónico</label>
                                <input type="email" name="email" class="form-control" id="email"
                                    placeholder="name@example.com">
                                <small class="text-danger ms-2"><%= locals.errors && errors.email ? errors.email.msg : null %></small>

                            </div>
                            <div class="col-12 mb-3">
                                <label for="password" class="form-label">Contraseña</label>
                                <input type="password" name="password" class="form-control" id="password">
                                <small class="text-danger ms-2"><%= locals.errors && errors.password ? errors.password.msg : null %></small>

                            </div>
                            <div class="col-12 col-md-6 mb-3">

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="1" id="remember"
                                        name="remember">
                                    <label class="form-check-label" for="remember">
                                        Recordame
                                    </label>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 mb-3">
                                <button class="btn btn-dark w-100">Ingresá</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <%- include('../partials/scripts') %>

</body>
</html>