<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>
<body>
  <%- include('../partials/header') %>
 
        <main class="container">
          <section class="row">
            <div class="col-12 col-md-10 col-lg-6 mx-auto my-5 p-4"
            style="background-color: rgba(255, 255, 255, 0.7); box-shadow:gray 5px 5px 10px;"
            >
              <h4 class="">Perfil de usuario</h4>
              <hr>
          
            <form action="" class="row" method="POST">
              <div class="col-12 col-md-6 mb-3">
                <label class="form-label" for="firstName">Nombre*</label>
                <input
                  class="form-control"
                  type="text"
                  id="firstName"
                  name="firstName"
                  value="<%= firstName%>"
                />
              </div>

              <div class="col-12 col-md-6 mb-3">
                <label class="form-label" for="lastName">Apellido*</label>
                <input
                  class="form-control"
                  type="text"
                  id="lastName"
                  name="lastName"
                  value="<%= lastName%>"
                />
              </div>

              <div class="col-12 col-md-6 mb-3">
                <label class="form-label" for="phone">Teléfono</label>
                <input
                  class="form-control"
                  type="phone"
                  id="phone"
                  name="phone"
                  readonly
                  value="<%= phone%>"


                />
              </div>
              <div class="col-12 col-md-6 mb-3">
                <label class="form-label" for="birthday">Cumpleaños</label>
                <input
                  class="form-control"
                  type="birthday"
                  id="birthday"
                  name="birthday"
                  readonly
                  value="<%= birthday%>"


                />
              </div>
             


            

              <div class="d-flex flex-column flex-md-row justify-content-between">

                <button class="btn btn-dark">ACTUALIZAR</button>
              </div>
              
                

                
            
            </form>
          </div>


        </section>

        
        </main> 
        
      </div>   
</body>
</html>