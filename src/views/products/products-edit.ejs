<!DOCTYPE html>
<html lang="es">

<head>

  <%- include('../partials/head') %>
    <%- include('../partials/scripts') %>
      <link rel="icon" type="image/x-icon" href="/img/fondo-accesorios-cafe.PNG">
      <title>Cafeinatopia - Editar Producto</title>

</head>

<body class="dashboard-body">

  <header>
    <%- include('../partials/header-admin') %>
  </header>

  <main class="create-form">
    <section class="row my-2">
        <div class="col-12 col-md-10 mx-auto">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                          <li class="breadcrumb-item"><a href="/dashboard" class="text-primary">Dashboard</a></li>
                          <li class="breadcrumb-item active" aria-current="page">Editar articulo</li>
                        </ol>
                      </nav>
                </div>
                <div class="card-body">
                    <form action="/products/update/<%= id %>?_method=PUT" class="row" method="POST" enctype="multipart/form-data">
                          <h3>Editando:"<%= name %>"</h3>
                          <hr>
                          
                          <div class="col-12 col-md-6 mb-3">
                              <div class="form-floating ">
                                  <input name="nombre" type="text" class="form-control" id="nombre" value="<%= name %>" >
                                  <label for="nombre">Nombre del articulo</label>
                                  <small class="text-danger ms-2"><%= (locals.errors && errors.name) && errors.name.msg %></small>
                                </div>

                          </div>

                          <div class="col-12 col-md-6 mb-3">
                            <div class="form-floating">
                                <input name="precio" type="number" class="form-control" id="precio" value="<%= price %>" >
                                <label for="precio">Precio actual: </label>
                                <small class="text-danger ms-2"><%= (locals.errors && errors.price) && errors.price.msg %></small>
                            </div>
                           </div>
                           
                        <div class="col-12">
                          <div class="form-floating">
                              <textarea name="description" class="form-control <%= (locals.errors && errors.description) && 'is-invalid' %>" id="description" style="height: 100px;"><%= description %></textarea>
                              <label for="description">Descripción</label>
                              <small class="text-danger ms-2"><%= (locals.errors && errors.description) && errors.description.msg %></small>
                            </div>

                      </div>

                        <div class="col-12 col-md-6 mb-3">
                          <div class="form-floating">
                              <select name="categoryId" class="form-select <%= (locals.errors && errors.categoryId)  && 'is-invalid'%>" id="categoryId" aria-label="Floating label select example">
                                <option value="" selected hidden></option>
                                <% categories.forEach(category => { %>
                                  <option value="<%= category.id %>" <%= categoryId == category.id && 'selected'  %>><%= category.name %></option>
                                <% }) %>
                              </select>
                              <label for="category">Categoría</label>
                              <small class="text-danger ms-2"><%= (locals.errors && errors.category) && errors.category.msg %></small>
                            </div>

                        </div>


                          
                            
             
                        

                        <div class="col-12 col-md-3 mb-4">
                          <input name="image" type="file" class="form-control" id="image" hidden>
                          <label class="btn btn-lg btn-outline-dark w-100" for="image">Imagen principal</label>
                          <small class="text-danger ms-2"><%= (locals.errors && errors.image) && errors.image.msg %></small>

                        </div>

                      
                      <div class="col-12 col-md-3 mb-4">
                        <input  name="images" type="file" class="form-control" id="images" hidden multiple>
                        <label class="btn btn-lg btn-outline-dark w-100" for="images">Imágenes</label>
                        <small class="text-danger ms-2"><%= (locals.errors && errors.category) && errors.category.msg %></small>

                      </div>
                      
                        <div class="col-11  d-flex justify-content-end">
                            <button type="submit"class="btn btn-lg btn-dark">Guardar Cambios</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </section>
  </main>
</body>
</html>